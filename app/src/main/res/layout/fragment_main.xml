<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
      android:id="@+id/app_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:text="@string/app_name"
      android:textColor="@color/success"
      android:textSize="@dimen/title_size"
      app:layout_constraintBottom_toTopOf="@+id/play_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <Button
      android:id="@+id/play_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/blue_button_background"
      android:fontFamily="sans-serif"
      android:paddingHorizontal="@dimen/play_button_horizontal_padding"
      android:paddingTop="@dimen/play_button_padding_top"
      android:paddingBottom="@dimen/play_button_padding_bottom"
      android:text="@string/play"
      android:textAllCaps="false"
      android:textColor="@color/white"
      android:textSize="@dimen/play_text_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/app_title" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
